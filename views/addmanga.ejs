<%- include("layout/header") %>
<div class="container">
    <div class="row">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mx-auto mt-4">
                    <div class="card shadow">
                        <div class="card-header bg-primary">
                            <h5 class="text-light">Add New Manga</h5>
                        </div>
                        <div class="card-body p-4">
                            <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="title">Title</label>
                                    <input type="text" name="title" class="form-control form-control-lg" placeholder="Enter Title" required/>
                                </div>
                                <div class="mb-3">
                                    <label for="description">Description</label>
                                    <input type="text" name="description" class="form-control form-control-lg" placeholder="Enter Description" required/>
                                </div>
                                <div class="mb-3">
                                    <label for="coverImg" class="form-label">Select Image</label>
                                    <input type="file" name="coverImg" class="form-control form-control-lg" required/>
                                </div>
                                <div class="mb-3">
                                    <input type="submit" name="submit" value="Add Manga" class="btn btn-primary btn-lg" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("layout/footer") %>