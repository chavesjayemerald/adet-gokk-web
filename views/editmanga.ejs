<%- include("layout/header") %>
<div class="container">
    <div class="row">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mx-auto mt-4">
                    <div class="card shadow">
                        <div class="card-header bg-primary">
                            <h5 class="text-light">Edit (<%=manga.title %>)</h5>
                        </div>
                        <div class="card-body p-4">
                            <form action="/update/<%= manga._id %>" method="post" id="add-form" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="title">Title</label>
                                    <input type="text" name="title" class="form-control form-control-lg" placeholder="Enter Title" value="<%= manga.title %>" required/>
                                </div>
                                <div class="mb-3">
                                    <label for="description">Description</label>
                                    <input type="text" name="description" class="form-control form-control-lg" placeholder="Enter Description" value="<%= manga.description %>" required/>
                                </div>
                                <div class="mb-3 text-center">
                                    <label for="coverImg" class="form-label">Select Image</label>
                                    <input type="file" name="coverImg" class="form-control form-control-lg"/>
                                    <img src="/uploads/<%= manga.coverImg %>" alt="<%= 'Cover image for ' + manga.title %>" width="100" class="img-thumbnail mt-1"/>
                                </div>
                                <input type="hidden" name="oldcoverImg" value="<%= manga.coverImg %>"/>
                                <div class="mb-3 d-grid">
                                    <input type="submit" name="submit" value="Update Manga" class="btn btn-primary btn-lg" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("layout/footer") %>